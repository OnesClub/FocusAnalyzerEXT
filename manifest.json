{
  "manifest_version": 3,
  "name": "Focus Analyzer",
  "version": "1.0.0",
  "description": "Track browsing habits and analyze distraction patterns to improve focus",
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "webNavigation",
    "alarms",
    "notifications"
  ],
  "background": {
    "service_worker": "dist/background.js"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["dist/content.js"]
  }],
  "action": {
    "default_popup": "dist/popup.html",
    "default_icon": {
      "16": "dist/icons/icon16.png",
      "48": "dist/icons/icon48.png",
      "128": "dist/icons/icon128.png"
    }
  },
  "icons": {
    "16": "dist/icons/icon16.png",
    "48": "dist/icons/icon48.png",
    "128": "dist/icons/icon128.png"
  }
}